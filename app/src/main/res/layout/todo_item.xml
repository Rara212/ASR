<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebded4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="106dp"
        android:layout_height="113dp"
        android:padding="10dp"
        android:src="@mipmap/ic_todo2_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/txt_todolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="67dp"
        android:text="Your Activity Here"
        android:textSize="19dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@id/icon_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>