<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffaf1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="106dp"
        android:layout_height="113dp"
        android:padding="10dp"
        android:src="@mipmap/ic_checklist_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/txt_todolist"
        android:layout_width="303dp"
        android:layout_height="111dp"
        android:layout_marginVertical="67dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Your Activity Here"
        android:textSize="24sp"
        android:textStyle="normal"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>