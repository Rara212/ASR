<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_orange</item>
        <item name="colorPrimaryVariant">@color/light_orange</item>
        <item name="colorOnPrimary">@color/light_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/harmonious_gold</item>
        <item name="colorSecondaryVariant">@color/harmonious_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/metropolis_medium</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorAccent">#FFCC00</item>
        <item name="android:background">#CCC7BE</item>
    </style>
</resources>